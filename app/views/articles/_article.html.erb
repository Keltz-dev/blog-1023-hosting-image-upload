<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= article.body %>
  </p>

  <% if article.photos.attached? %>
    <% article.photos.each do |photo| %>
      <%= cl_image_tag(photo.key,
      width: 400, height: 300, crop: :fill) %>
    <% end %>
  <% end %>

</div>
